local p = game.Players.LocalPlayer
local c = p.Character or p.CharacterAdded:Wait()
local h = c:WaitForChild("Humanoid")
local id = "rbxassetid://75390215999547"

local a = h:FindFirstChildOfClass("Animator") or Instance.new("Animator", h)
local anim = Instance.new("Animation")
anim.AnimationId = id
local t = a:LoadAnimation(anim)
t:Play() task.wait() t.TimePosition = 2.1 t:AdjustSpeed(0)

h.AnimationPlayed:Connect(function(x)
	local i = x.Animation and x.Animation.AnimationId or ""
	if i ~= id then print("Blocked animation:", i) x:Stop() x:Destroy() end
end)
